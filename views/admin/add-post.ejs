<!-- Modal Crop Gambar -->
<div id="cropModal" style="
  display:none;
  position:fixed;
  top:0; left:0;
  width:100%; height:100%;
  background:rgba(0,0,0,0.7);
  justify-content:center; align-items:center;
  z-index:9999;
">
  <div style="background:#fff; padding:1rem; border-radius:8px; max-width:700px; width:90%; max-height:90%; overflow:auto;">
    <h3>Crop Gambar</h3>
    <div style="width:100%; max-height:400px; overflow:hidden;">
      <img id="cropImage" src="" style="width:100%;">
    </div>
    <div style="margin-top:1rem; text-align:right;">
      <button id="cancelCrop" class="btn-secondary">Batal</button>
      <button id="confirmCrop" class="btn-primary">Simpan Crop</button>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const imageInput = document.getElementById('image');
  const cropModal = document.getElementById('cropModal');
  const cropImage = document.getElementById('cropImage');
  const confirmCrop = document.getElementById('confirmCrop');
  const cancelCrop = document.getElementById('cancelCrop');
  const previewImg = document.getElementById('imagePreview');
  const previewContainer = document.getElementById('imagePreviewContainer');
  const removeBtn = document.getElementById('removeImageBtn');
  const fileLabel = document.querySelector('.file-input-label span');
  let cropper;

  imageInput.addEventListener('change', () => {
    const file = imageInput.files[0];
    if (!file) return;

    const reader = new FileReader();
    reader.onload = e => {
      cropImage.src = e.target.result;
      cropModal.style.display = 'flex';
      if (cropper) cropper.destroy();

      cropImage.onload = () => {
        cropper = new Cropper(cropImage, {
          aspectRatio: 16 / 9,
          viewMode: 1,
          autoCropArea: 1,
          movable: true,
          zoomable: true
        });
      };
    };
    reader.readAsDataURL(file);
  });

  confirmCrop.addEventListener('click', () => {
    if (!cropper) return;
    cropper.getCroppedCanvas({ width: 800, height: 450 }).toBlob(blob => {
      const newFile = new File([blob], imageInput.files[0].name, { type: 'image/png' });
      const dt = new DataTransfer();
      dt.items.add(newFile);
      imageInput.files = dt.files;

      previewImg.src = URL.createObjectURL(blob);
      previewContainer.style.display = 'block';
      fileLabel.textContent = newFile.name;

      cropper.destroy();
      cropModal.style.display = 'none';
    });
  });

  cancelCrop.addEventListener('click', () => {
    if (cropper) cropper.destroy();
    cropModal.style.display = 'none';
    imageInput.value = '';
  });

  removeBtn.addEventListener('click', () => {
    imageInput.value = '';
    previewContainer.style.display = 'none';
    fileLabel.textContent = 'Pilih Gambar';
  });
});
</script>