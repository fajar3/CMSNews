    <div class="card">
      <div class="card-header">
        <h2><i class="fa-solid fa-pen-to-square"></i> Edit Artikel</h2>
      </div>

      <form action="/admin/edit/<%= post.id %>" method="POST" enctype="multipart/form-data" class="form-container">
        
        <div class="form-group">
          <label for="title"><i class="fa-solid fa-heading"></i> Judul</label>
          <input type="text" id="title" name="title" value="<%= post.title %>" required>
        </div>

        <div class="form-group">
          <label for="subtitle"><i class="fa-solid fa-align-left"></i> Subjudul</label>
          <input type="text" id="subtitle" name="subtitle" value="<%= post.subtitle %>">
        </div>

        <div class="form-group">
          <label for="content"><i class="fa-solid fa-file-lines"></i> Konten</label>
          <textarea id="content" name="content" rows="10" required><%= post.content %></textarea>
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="category"><i class="fa-solid fa-tags"></i> Kategori</label>
            <input type="text" id="category" name="category" value="<%= post.category %>">
          </div>
          <div class="form-group">
            <label for="tags"><i class="fa-solid fa-hashtag"></i> Tag</label>
            <input type="text" id="tags" name="tags" value="<%= post.tags %>">
          </div>
        </div>

        <div class="form-group">
          <label for="author"><i class="fa-solid fa-user"></i> Penulis</label>
          <input type="text" id="author" name="author" value="<%= post.author_id %>">
        </div>

        <div class="form-group">
          <label><i class="fa-solid fa-image"></i> Gambar</label>
          <div class="image-container">
            <div class="current-image">
              <% if (post.image) { %>
                <img src="<%= post.image %>" alt="Current Image" id="currentImage">
              <% } else { %>
                <div class="no-image">
                  <i class="fa-solid fa-image"></i>
                  <span>Tidak ada gambar</span>
                </div>
              <% } %>
            </div>
            
            <div class="file-upload">
              <input type="file" id="image" name="image" class="file-input">
              <label for="image" class="file-label">
                <i class="fa-solid fa-cloud-upload-alt"></i>
                <span>Pilih Gambar Baru</span>
              </label>
            </div>
            
            <div class="image-preview" id="imagePreview" style="display: none;">
              <div class="preview-header">
                <h4>Pratinjau Gambar Baru</h4>
                <button type="button" id="removeImage" class="remove-btn">
                  <i class="fa-solid fa-times"></i>
                </button>
              </div>
              <img id="previewImg" src="" alt="Preview">
            </div>
          </div>
        </div>

        <div class="form-actions">
          <a href="/admin/dashboard" class="btn-cancel">
            <i class="fa-solid fa-arrow-left"></i> Batal
          </a>
          <button type="submit" class="btn-submit">
            <i class="fa-solid fa-floppy-disk"></i> Perbarui
          </button>
        </div>
      </form>
    </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const imageInput = document.getElementById('image');
      const imagePreview = document.getElementById('imagePreview');
      const previewImg = document.getElementById('previewImg');
      const removeImageBtn = document.getElementById('removeImage');
      const fileLabel = document.querySelector('.file-label span');
      
      // Fungsi untuk menampilkan pratinjau gambar
      imageInput.addEventListener('change', function() {
        const file = this.files[0];
        
        if (file) {
          const reader = new FileReader();
          
          reader.addEventListener('load', function() {
            previewImg.setAttribute('src', this.result);
            imagePreview.style.display = 'block';
            fileLabel.textContent = file.name;
          });
          
          reader.readAsDataURL(file);
        } else {
          imagePreview.style.display = 'none';
          fileLabel.textContent = 'Pilih Gambar Baru';
        }
      });
      
      // Fungsi untuk menghapus gambar yang dipilih
      removeImageBtn.addEventListener('click', function() {
        imageInput.value = '';
        imagePreview.style.display = 'none';
        fileLabel.textContent = 'Pilih Gambar Baru';
      });
    });
  </script>