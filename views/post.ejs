

<header>
  <h1><%= post.title %></h1>
  <% if(post.subtitle){ %>
    <h2><%= post.subtitle %></h2>
  <% } %>
  <div class="text-muted mb-3">
    <span>By <%= post.author || 'Anonymous' %></span> •
    <span><%= new Date(post.created_at).toLocaleDateString() %></span>
    <% if(post.category){ %>• <span>Category: <%= post.category %></span><% } %>
  </div>
</header>

<% if(post.image){ %>
  <img src="<%= post.image %>" alt="<%= post.title %>" class="img-fluid rounded mb-4">
<% } %>

<p><%= post.content %></p>

<% if(post.tags){ %>
  <div class="mt-3">
    <% post.tags.split(',').forEach(tag => { %>
      <span class="badge bg-secondary"><%= tag.trim() %></span>
    <% }) %>
  </div>
<% } %>

<a href="/" class="btn btn-link mt-4"><i class="fa-solid fa-arrow-left"></i> Kembali ke Beranda</a>

<% if(relatedPosts && relatedPosts.length > 0){ %>
  <section class="mt-5">
    <h3>Berita Terkait</h3>
    <div class="row mt-3">
      <% relatedPosts.forEach(rp => { %>
        <div class="col-md-4 mb-3">
          <div class="card h-100 shadow-sm">
            <% if(rp.image){ %>
              <img src="<%= rp.image %>" class="card-img-top" alt="<%= rp.title %>">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><a href="/post/<%= rp.slug %>" class="text-decoration-none"><%= rp.title %></a></h5>
              <% if(rp.subtitle){ %>
                <p class="text-muted small"><%= rp.subtitle.length>60 ? rp.subtitle.substring(0,60)+'…' : rp.subtitle %></p>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
<% } %>
